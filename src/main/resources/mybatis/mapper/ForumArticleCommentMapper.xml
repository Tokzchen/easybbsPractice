<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.easybbsweb.mapper.ForumArticleCommentMapper">

    <update id="updateLikeById">
        UPDATE forum_article_comment
        SET `like` = `like` + #{increment}
        WHERE id = #{articleId}
    </update>
</mapper>